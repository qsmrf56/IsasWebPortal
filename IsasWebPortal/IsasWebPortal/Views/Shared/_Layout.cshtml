<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ISAS Consultants</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<div>
                    <img src="C:\\Adnan\\ISAS-Logo.png" alt="" /><img />
                </div>*@
                @Html.ActionLink("Isas Consultants - Web Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "ClientIndex", "Client")</li>
                    <li>@Html.ActionLink("Clients", "ClientIndex", "Client")</li>
                    <li>@Html.ActionLink("Form Designer", "FormTemplatesIndex", "FormTemplates")</li>
                    @*<li>@Html.ActionLink("Form Designer", "FormTemplatesIndex", "FormTemplates") *@
                     <li>   <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Configurations
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Form Types", "FormTypesIndex", "FormTypes")</li>
                            <li>@Html.ActionLink("Application Types", "ApplicationTypeConfigIndex", "ApplicationTypeConfig")</li>
                            <li>@Html.ActionLink("Country Settings", "CountryConfigIndex", "CountryConfig")</li>
                            <li>@Html.ActionLink("Application Stages", "StageIndex", "Stage")</li>
                            <li>@Html.ActionLink("Client Status", "ClientStatusConfigIndex", "ClientStatusConfig")</li>
                            <li>@Html.ActionLink("Payment Settings", "PaymentConfigIndex", "PaymentConfig")</li>
                        </ul>
                        
                    </li>
                    <li>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Templates
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("E-mail Templates", "EmailTemplatesIndex", "EmailTemplates")</li>
                            <li>@Html.ActionLink("Agreement Templates", "AgreementTemplatesIndex", "AgreementTemplates")</li>
                        </ul>

                    </li>
                    <li>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Account Settings
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("E-mail Settings", "EmailVaultIndex", "EmailVault")</li>
                            
                        </ul>

                    </li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
